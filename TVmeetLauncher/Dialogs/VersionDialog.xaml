<UserControl x:Class="TVmeetLauncher.VersionDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:TVmeetLauncher"
             DataContext="{x:Static local:CommandViewModel.Instance}"
             mc:Ignorable="d" 
             d:DesignHeight="200.847" d:DesignWidth="317.849" 
             
             FontFamily="UD新ゴNT Pro" >

    <materialDesign:Card Style="{StaticResource MaterialDesignOutlinedCard}" Background="AliceBlue" BorderBrush="LightGray">
        <Grid Margin="32" ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Left">

                <TextBlock Text="バージョン情報" Margin="0"
                    FontSize="{Binding Source={x:Static local:BaseViewModel.Instance}, Path=HeadlineFontSize}"                   
                    FontWeight="Bold" />
                <TextBlock Text="テレビ会議システム" Margin="10"
                            FontSize="{Binding Source={x:Static local:BaseViewModel.Instance}, Path=CaptionFontSize}"/>
                <TextBlock Text="バージョン: 0.1.0" Margin="10 0 10 10"
                            FontSize="{Binding Source={x:Static local:BaseViewModel.Instance}, Path=CaptionFontSize}"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,16,0,0" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Margin="0,0,0,0"
                    Height="{Binding Source={x:Static local:BaseViewModel.Instance}, Path=DialogButtonHeight}"
                    FontSize="{Binding Source={x:Static local:BaseViewModel.Instance}, Path=CaptionFontSize}"
                    VerticalContentAlignment="Center"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    Content="OK"
                    IsDefault="True"
                    Style="{StaticResource MaterialDesignFlatDarkButton}"
                    materialDesign:ButtonAssist.CornerRadius="5" />
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>
